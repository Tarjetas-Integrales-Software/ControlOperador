<?xml version="1.0" encoding="utf-8"?>
<!-- Layout para orientaciÃ³n HORIZONTAL (Landscape) -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/login_background"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Welcome Header -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido, Operador"
            android:textColor="@color/primary_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resumen de comunicaciones"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:layout_marginBottom="16dp" />

        <!-- Cards Container - HORIZONTAL en landscape -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Text Messages Card - IZQUIERDA -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/textMessagesCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ’¬ Mensajes de Texto"
                            android:textColor="@color/primary_dark"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/unreadTextBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/badge_background"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:text="2 sin leer"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:visibility="visible" />
                    </LinearLayout>

                    <!-- Recent Messages List -->
                    <LinearLayout
                        android:id="@+id/textMessagesContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <!-- View All Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/viewAllTextButton"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/messages_view_all"
                        android:textColor="@color/accent_blue"
                        android:textSize="12sp"
                        android:minHeight="36dp"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconGravity="end" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Voice Messages Card - DERECHA -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/voiceMessagesCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸŽ™ï¸ Notas de Voz"
                            android:textColor="@color/primary_dark"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/unplayedVoiceBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/badge_background"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:text="2 sin reproducir"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:visibility="visible" />
                    </LinearLayout>

                    <!-- Recent Voice Messages List -->
                    <LinearLayout
                        android:id="@+id/voiceMessagesContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <!-- View All Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/viewAllVoiceButton"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/messages_view_all"
                        android:textColor="@color/accent_blue"
                        android:textSize="12sp"
                        android:minHeight="36dp"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconGravity="end" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
