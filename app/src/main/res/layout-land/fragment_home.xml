<?xml version="1.0" encoding="utf-8"?>
<!-- Layout para orientaciÃ³n HORIZONTAL (Landscape) -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/login_background"
    android:fitsSystemWindows="false"
    android:clipToPadding="false"
    tools:context=".ui.home.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:fitsSystemWindows="false"
        android:clipToPadding="false">

        <!-- Header con timer en tiempo real -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Textos de bienvenida - IZQUIERDA -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bienvenido, Operador"
                    android:textColor="@color/primary_dark"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/subtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resumen de comunicaciones"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- Timer en tiempo real - DERECHA -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/textViewDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23/10/2025 - 14:30:45"
                    android:textColor="@color/accent_gold"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace" />

            </LinearLayout>
        </LinearLayout>


        <!-- Cards Container - HORIZONTAL en landscape -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Text Messages Card - IZQUIERDA (CON CHAT INTEGRADO) - 2/3 de la pantalla -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/textMessagesCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="2"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Header con tÃ­tulo y badge -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primary_dark"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ’¬ Mensajes de Texto"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/unreadTextBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/badge_background"
                            android:paddingStart="8dp"
                            android:paddingTop="4dp"
                            android:paddingEnd="8dp"
                            android:paddingBottom="4dp"
                            android:text="2 sin leer"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            tools:visibility="visible" />
                    </LinearLayout>

                    <!-- RecyclerView de mensajes de chat -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/messagesRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/login_background"
                        android:clipToPadding="false"
                        android:padding="12dp" 
                        tools:listitem="@layout/item_text_message_sent" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Predefined Responses Card - DERECHA - 1/3 de la pantalla -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/voiceMessagesCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:weightSum="1">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ’¬ Respuestas Predefinidas"
                            android:textColor="@color/primary_dark"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/unplayedVoiceBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/badge_background"
                            android:paddingStart="6dp"
                            android:paddingTop="3dp"
                            android:paddingEnd="6dp"
                            android:paddingBottom="3dp"
                            android:text="Toca para enviar"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            tools:visibility="visible" />
                    </LinearLayout>

                    <!-- Predefined Responses List con scroll vertical -->
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fillViewport="false"
                        android:scrollbars="vertical"
                        android:fadeScrollbars="false">
                        
                        <LinearLayout
                            android:id="@+id/voiceMessagesContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </ScrollView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>