<?xml version="1.0" encoding="utf-8"?>
<!-- Layout para orientación HORIZONTAL (Landscape) -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    tools:context=".ui.chat.ChatFragment">

    <!-- RecyclerView para mensajes - IZQUIERDA -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/responsesPanel"
        app:layout_constraintWidth_percent="0.60"
        tools:listitem="@layout/item_text_message_sent" />

    <!-- Panel de respuestas predeterminadas - DERECHA (siempre visible) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/responsesPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/messagesRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.35">

        <!-- Background con gradiente -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_responses_panel_gradient" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header con ícono y título -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_send"
                        android:tint="@color/white"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/select_predefined_response" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_predefined_response"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:letterSpacing="0.01" />

                </LinearLayout>

                <!-- Divider decorativo -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:alpha="0.8" />

                <!-- Contenedor dinámico para botones de respuestas predeterminadas -->
                <LinearLayout
                    android:id="@+id/responsesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Los botones se crean dinámicamente desde ChatFragment -->
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <!-- Nota: No necesitamos botón "responseButton" aquí porque las respuestas están siempre visibles -->

</androidx.constraintlayout.widget.ConstraintLayout>
