<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conversationCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icono de conversación -->
        <ImageView
            android:id="@+id/conversationIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_voice"
            android:tint="@color/accent_blue"
            android:contentDescription="@string/messages_voice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Badge de mensajes no leídos -->
        <TextView
            android:id="@+id/unreadBadge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/badge_background"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/conversationIcon"
            app:layout_constraintTop_toTopOf="@id/conversationIcon"
            tools:text="5"
            tools:visibility="visible" />

        <!-- Nombre del analista -->
        <TextView
            android:id="@+id/analystName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/conversationIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/conversationIcon"
            tools:text="Juan Pérez Analista" />

        <!-- Fecha del último mensaje -->
        <TextView
            android:id="@+id/lastMessageDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/analystName"
            app:layout_constraintTop_toBottomOf="@id/analystName"
            tools:text="Hoy 14:30" />

        <!-- Duración del último audio -->
        <TextView
            android:id="@+id/lastDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/accent_blue"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/ic_access_time"
            android:drawablePadding="4dp"
            app:layout_constraintStart_toEndOf="@id/lastMessageDate"
            app:layout_constraintTop_toTopOf="@id/lastMessageDate"
            tools:text="1:23" />

        <!-- Total de mensajes -->
        <TextView
            android:id="@+id/totalMessages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/analystName"
            app:layout_constraintTop_toBottomOf="@id/lastMessageDate"
            tools:text="12 mensajes" />

        <!-- Icono de flecha -->
        <ImageView
            android:id="@+id/arrowIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:tint="@color/text_secondary"
            android:contentDescription="@string/ver_mensajes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
